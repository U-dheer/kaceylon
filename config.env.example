PORT=3000
MONGODB_URI=your_mongodb_uri_here
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
EMAIL_HOST=your_email_host_here
EMAIL_PORT=your_email_port_here
EMAIL_USER=your_email_user_here
EMAIL_PASS=your_email_pass_here
FRONTEND_URL=http://localhost:3000
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Enable an in-memory MongoDB fallback for local development when Atlas cannot be reached.
# Set to 'true' to use mongodb-memory-server (devDependency). Leave as 'false' for Atlas-only.
MONGO_FALLBACK=false
# Number of times to retry connecting to MongoDB before giving up
MONGO_CONNECT_RETRIES=5
# Milliseconds to wait between connection attempts
MONGO_CONNECT_DELAY_MS=5000
