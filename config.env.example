# Example environment variables for keycealon backend
# Copy this file to "config.env" and fill values. Do NOT commit secrets to source control.

# Server
PORT=3000
NODE_ENV=development

# Frontend origins
# Use FRONTEND_URLS for multiple comma-separated origins, or FRONTEND_URL for a single origin.
FRONTEND_URL=http://localhost:3000
# FRONTEND_URLS=http://localhost:3000,https://app.example.com

# Cookie domain (optional) - useful for sharing cookies across subdomains
#COOKIE_DOMAIN=.example.com

# MongoDB
MONGODB_URI=mongodb://localhost:27017/keycealon
# Optional: control connection retry behavior
MONGO_CONNECT_RETRIES=5
MONGO_CONNECT_DELAY_MS=5000
# For development testing fallback to in-memory MongoDB
MONGO_FALLBACK=false

# JWT secrets and expiry settings
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_REFRESH_EXPIRE=7d

# Email (used for notifications/password reset)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=you@example.com
EMAIL_PASS=your_email_password

# Cloudinary (optional, used for uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional: specify domain for cookies if using subdomains
# COOKIE_DOMAIN=.example.com

# Optional: other tweaks
# LOG_LEVEL=info

# Important: keep secrets secret. Do not commit real secrets to git.
